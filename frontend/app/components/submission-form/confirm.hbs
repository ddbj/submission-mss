<UploadProgressModal as |modal|>
  <form {{on 'submit' (prevent-default (fn this.submit modal))}}>
    <div class="vstack gap-3">
      <div class="card">
        <div class="card-header">事前質問</div>

        <div class="card-body">
          <ul class="mb-0">
            {{#if @state.determinedByOwnStudy}}
              <li>{{t 'submission-form.prerequisite.a1-1'}}</li>
            {{else}}
              <li>{{t 'submission-form.prerequisite.a1-2'}}</li>

              {{#if @model.tpa}}
                <li>{{t 'submission-form.prerequisite.a2-1'}}</li>
              {{else}}
                <li>{{t 'submission-form.prerequisite.a2-2'}}</li>
              {{/if}}
            {{/if}}

            {{#if (eq @state.submissionFileType 'none')}}
              <li>{{t 'submission-form.files.a3'}}</li>
            {{else if @model.dfast}}
              <li>{{t 'submission-form.files.a1'}}</li>
            {{else}}
              <li>{{t 'submission-form.files.a2'}}</li>
            {{/if}}
          </ul>
        </div>
      </div>

      {{#with @state.fileSet.files as |files|}}
        <div class="card">
          <div class="card-header">登録ファイル</div>

          <ul class="list-group list-group-flush">
            {{#each files as |file|}}
              <li class="list-group-item">{{file.name}}</li>
            {{/each}}
          </ul>
        </div>
      {{/with}}

      <div class="card">
        <div class="card-header">エントリ数</div>

        <div class="card-body">
          {{@model.entriesCount}}
        </div>
      </div>

      <div class="card">
        <div class="card-header">公開予定日</div>

        <div class="card-body">
          {{or @model.holdDate '即時公開'}}
        </div>
      </div>

      <div class="card">
        <div class="card-header">コンタクトパーソン</div>

        <div class="card-body">
          {{#let @model.contactPerson as |person|}}
            {{person.fullName}} &lt;{{person.email}}&gt; ({{person.affiliation}})
          {{/let}}
        </div>
      </div>

      <div class="card">
        <div class="card-header">追加連絡先</div>

        {{#if @model.otherPeople}}
          <ul class="list-group list-group-flush">
            {{#each @model.otherPeople as |person|}}
              <li class="list-group-item">{{person.fullName}} &lt;{{person.email}}&gt;</li>
            {{/each}}
          </ul>
        {{else}}
          <div class="card-body">
            なし
          </div>
        {{/if}}
      </div>

      <div class="card">
        <div class="card-header">シークエンサー</div>

        <div class="card-body">
          {{t (concat 'sequencers.' @model.sequencer)}}
        </div>
      </div>

      <div class="card">
        <div class="card-header">データ種別</div>

        <div class="card-body">
          {{t (concat 'data_types.' @model.dataType)}}
        </div>
      </div>

      <div class="card">
        <div class="card-header">補足説明</div>

        <div class="card-body">
          {{#if @model.description}}
            <div style="white-space: pre-wrap;">{{@model.description}}</div>
          {{else}}
            なし
          {{/if}}
        </div>
      </div>

      <div class="card">
        <div class="card-header">通知メールの言語</div>

        <div class="card-body">
          {{t (concat 'locales.' @model.emailLanguage)}}
        </div>
      </div>

      <p>入力内容をご確認のうえ、よろしければ登録申請ボタンを押してください。クリック後は修正できません。</p>
    </div>

    <hr />

    <div class="hstack gap-3 justify-content-end">
      <a href class="btn btn-outline-primary px-4" {{on 'click' (prevent-default @nav.goPrev)}}>戻る</a>
      <button type="submit" class="btn btn-primary px-5">登録申請</button>
    </div>
  </form>
</UploadProgressModal>
