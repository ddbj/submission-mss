{{page-title (t 'application.title')}}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <LinkTo @route="index" class="navbar-brand">{{t 'application.title'}}</LinkTo>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label={{t 'application.toggle-nav'}}>
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarLang" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            {{t 'application.language'}}: {{t (concat 'application.locale.' this.locale)}}
          </a>

          <ul class="dropdown-menu" aria-labelledby="navbarLang">
            <li>
              <a class="dropdown-item" href {{on 'click' (prevent-default (fn this.changeLocale 'ja'))}}>{{t 'application.locale.ja'}}</a>
              <a class="dropdown-item" href {{on 'click' (prevent-default (fn this.changeLocale 'en'))}}>{{t 'application.locale.en'}}</a>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  {{outlet}}
</div>